<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tkobayalab.fingerpaste"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tkobayalab.fingerpaste.HomeActivity"
            android:label="@string/title_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tkobayalab.fingerpaste.AddActivity"
            android:label="@string/title_activity_add" >
        </activity>
        <activity
            android:name="com.tkobayalab.fingerpaste.EditActivity"
            android:label="@string/title_activity_edit" >
        </activity>
        <activity
            android:name="com.tkobayalab.fingerpaste.ConfigureActivity"
            android:label="@string/title_activity_configure" >
        </activity>
        <activity
            android:name="com.tkobayalab.fingerpaste.AbstractGestureInputActivity"
            android:label="@string/title_activity_abstract_gesture_input" >
        </activity>

        <service
            android:name="com.tkobayalab.fingerpaste.FPService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name="com.tkobayalab.fingerpaste.GestureInputAndReturnIntentActivity"
            android:label="@string/title_activity_gesture_input_and_return_intent" >
        </activity>
        <activity
            android:name="com.tkobayalab.fingerpaste.GestureInputAndTransitionActivity"
            android:label="@string/title_activity_gesture_input_and_transition" >
        </activity>
    </application>

</manifest>